{
	"name": "backend",
	"version": "0.0.1",
	"description": "cross-plataform backend",
	"author": "Tiago Cavalcante Trindade",
	"private": true,
	"license": "GPL-v3.0",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:prod": "node dist/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage"
	},
	"dependencies": {
		"@nestjs/common": "^7",
		"@nestjs/core": "^7",
		"@nestjs/platform-express": "^7",
		"reflect-metadata": "^0.1",
		"rimraf": "^3",
		"rxjs": "^6"
	},
	"devDependencies": {
		"@nestjs/cli": "^7",
		"@nestjs/schematics": "^7",
		"@nestjs/testing": "^7",
		"@types/express": "^4",
		"@types/jest": "^26",
		"@types/node": "^14",
		"@types/supertest": "^2",
		"jest": "^26",
		"supertest": "^6",
		"ts-jest": "^26",
		"ts-loader": "^8",
		"ts-node": "^9",
		"tsconfig-paths": "^3",
		"typescript": "^4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
